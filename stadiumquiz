using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Arrays
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.ForegroundColor = ConsoleColor.White;
            StadiumStruct[] Premiership = new StadiumStruct[5];

            Premiership[0].Name = "Wembley";
            Premiership[0].City = "London";
            Premiership[0].Team = "Tottenham Hotspur";
            Premiership[0].Capacity = 90000;
            Premiership[0].YearBuilt = 2007;
            Premiership[0].Cost = 1090000000;

            Premiership[1].Name = "Old Trafford";
            Premiership[1].City = "Manchester";
            Premiership[1].Team = "Manchester United";
            Premiership[1].Capacity = 74994;
            Premiership[1].YearBuilt = 1910;
            Premiership[1].Cost = 7411875;

            Premiership[2].Name = "Emirates Stadium";
            Premiership[2].City = "London";
            Premiership[2].Team = "Arsenal";
            Premiership[2].Capacity = 59867;
            Premiership[2].YearBuilt = 2006;
            Premiership[2].Cost = 390000000;

            Premiership[3].Name = "Etihad Stadium";
            Premiership[3].City = "Manchester";
            Premiership[3].Team = "Manchester City";
            Premiership[3].Capacity = 55097;
            Premiership[3].YearBuilt = 2003;
            Premiership[3].Cost = 156000000;

            Premiership[4].Name = "Anfield";
            Premiership[4].City = "Liverpool";
            Premiership[4].Team = "Liverpool";
            Premiership[4].Capacity = 54074;
            Premiership[4].YearBuilt = 2007;
            Premiership[4].Cost = 190000000;

            string wembleyCityCheck = "";
            string wembleyTeamCheck = "";
            string wembleyCapacityCheck = "";
            string wembleyYearBuiltCheck = "";
            string wembleyCostCheck = "";

            Console.WriteLine("Welcome to the Stadium Quiz!");
            Console.WriteLine("Press enter to begin...");
            Console.ReadLine();
            Console.Clear();

            Console.WriteLine("====================");
            Console.WriteLine("Stadium #1 - Wembley");
            Console.WriteLine("====================");
            Console.WriteLine("\nQ1) In which city is Wembley located?");
            string wembleyCity = Console.ReadLine();
            Console.WriteLine("\nQ2) What team occupies Wembley?");
            string wembleyTeam = Console.ReadLine();
            Console.WriteLine("\nQ3) What is the capacity of Wembley?");
            int wembleyCapacity = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("\nQ4) In what year was Wembley construction completed?");
            int wembleyYearBuilt = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("\nQ5) How much did Wembley cost to build?");
            int wembleyCost = Convert.ToInt32(Console.ReadLine());
            Console.Clear();
            if (wembleyCity == Premiership[0].City)
            {
                wembleyCityCheck = "\u221A";
            }
            else
            {
                wembleyCityCheck = "X  You put " + wembleyCity;
            }
            if (wembleyTeam == Premiership[0].Team)
            {
                wembleyTeamCheck = "\u221A";
            }
            else
            {
                wembleyTeamCheck = "X  You put " + wembleyTeam;
            }
            if (wembleyCapacity == Premiership[0].Capacity)
            {
                wembleyCapacityCheck = "\u221A";
            }
            else
            {
                wembleyCapacityCheck = "X  You put " + wembleyCapacity;
            }
            if (wembleyYearBuilt == Premiership[0].YearBuilt)
            {
                wembleyYearBuiltCheck = "\u221A";
            }
            else
            {
                wembleyYearBuiltCheck = "X  You put " + wembleyYearBuilt;
            }
            if (wembleyCost == Premiership[0].Cost)
            {
                wembleyCostCheck = "\u221A";
            }
            else
            {
                wembleyCostCheck = "X  You put " + wembleyCost;
            }
            Console.WriteLine("====================");
            Console.WriteLine("Stadium #1 - Wembley");
            Console.WriteLine("====================");
            Console.WriteLine("\nQ1) City\nAnswer: " + Premiership[0].City + "  -  " + wembleyCityCheck);
            Console.WriteLine("\nQ2) Team\nAnswer: " + Premiership[0].Team + "  -  You Said " + wembleyTeam);
            Console.WriteLine("\nQ3) Capacity\nAnswer: " + Premiership[0].Capacity + "  -  You Said " + wembleyCapacity);
            Console.WriteLine("\nQ4) Year Built\nAnswer: " + Premiership[0].YearBuilt + "  -  You Said " + wembleyYearBuilt);
            Console.WriteLine("\nQ5) Cost\nAnswer: " + Premiership[0].Cost + "  -  You Said " + wembleyCost);
            Console.ReadLine();
        }
        struct StadiumStruct
        {
            public string Name;
            public string City;
            public string Team;
            public int Capacity;
            public int YearBuilt;
            public decimal Cost;
        }
    }
}
