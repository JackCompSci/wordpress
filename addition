using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Diagnostics;

namespace Calculator
{
    class Program
    {
        static void Main(string[] args)
        {
            // Addition Calculator
            // Declaring variables
            int a;
            int b;
            int c;

            // Assigning a and b values form user
            Console.WriteLine("Enter Number A: ");
            a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("\nEnter Number B: ");
            b = Convert.ToInt32(Console.ReadLine());

            c = a + b; // Adds a and b to get c
            Console.WriteLine("\n"); // Creates a space between input and solution
            Console.WriteLine(a + " + " + b + " = " + c); // Writes solution
            c++; // Adding 1 to c
            Console.WriteLine("Plus one is " + c); // Printing the answer plus one
            Console.Read(); // Prevents program from closing
        }
    }
}
